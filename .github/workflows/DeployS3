name: Deploy Selected Files to S3

on:
  push:
    branches:
      - main  # Runs when changes are pushed to the main branch
    paths:
      - "index.html"
      - "logo.png"
      - "images/**"  # Adjust this if your logo is in a different folder
    workflow_dispatch:  # Allows you to run this workflow manually

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Configure AWS Credentials
        uses: aws-actions/configure-aws-credentials@v2
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: ${{ secrets.AWS_REGION }}

      - name: Copy Selected Files to S3
        run: |
          aws s3 cp index.html s3://${{ secrets.S3_BUCKET_NAME }}/index.html
          aws s3 cp logo.png s3://${{ secrets.S3_BUCKET_NAME }}/logo.png
